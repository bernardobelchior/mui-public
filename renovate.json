{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>mui/mui-public//renovate/default"],
  "ignoreDeps": [],
  "packageRules": [
    {
      "groupName": "Node.js v22 updates",
      "description": "Pin all Node.js versions to latest v22 (except engines field)",
      "matchPackageNames": ["node"],
      "matchDatasources": ["github-tags", "node-version", "nodenv"],
      "matchManagers": ["github-actions", "regex", "nodenv"],
      "allowedVersions": "^22.0.0",
      "enabled": true
    },
    {
      "description": "Do not update node version in package.json engines field",
      "matchPackageNames": ["node"],
      "matchDepTypes": ["engines"],
      "matchManagers": ["npm"],
      "enabled": false
    }
  ]
}
